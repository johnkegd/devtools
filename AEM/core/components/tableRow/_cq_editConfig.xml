<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:actions="[edit,-,-,-]"
    cq:dialogMode="floating"
    cq:disableTargeting="{Boolean}true"
    cq:isContainer="{Boolean}true"
    cq:layout="editbar"
    jcr:primaryType="cq:EditConfig">
    <cq:listeners
        jcr:primaryType="cq:EditListenersConfig"
        afterchilddelete="guidelib.author.editConfigListeners.GUIDE_AFTER_CHILD_DELETE"
        afterchildedit="guidelib.author.editConfigListeners.GUIDE_AFTER_CHILD_EDIT"
        afterchildinsert="guidelib.author.editConfigListeners.GUIDE_AFTER_CHILD_INSERT"
        afterchildmove="guidelib.author.editConfigListeners.GUIDE_AFTER_CHILD_MOVE"
        afterdelete="guidelib.author.editConfigListeners.GUIDE_AFTER_DELETE"
        afteredit="guidelib.author.editConfigListeners.REFRESH_GUIDE"
        afterinsert="guidelib.author.editConfigListeners.GUIDE_AFTER_INSERT"
        aftermove="guidelib.author.editConfigListeners.REFRESH_GUIDE"/>
    <cq:actionConfigs jcr:primaryType="nt:unstructured">
        <editexpression
            jcr:primaryType="nt:unstructured"
            condition="function(editable){ return guidelib.author.AuthorUtils.showRuleEditor(); }"
            handler="guidelib.author.editConfigListeners.showExpressionEditor"
            text="Edit Rules"/>
        <addrow
            jcr:primaryType="nt:unstructured"
            handler="guidelib.author.AuthorUtils.GuideTableEdit.addRow"
            text="Add Row"/>
        <deleterow
            jcr:primaryType="nt:unstructured"
            handler="guidelib.author.AuthorUtils.GuideTableEdit.deleteRow"
            text="Delete Row"/>
        <moveup
            jcr:primaryType="nt:unstructured"
            condition="function(editable){return !guidelib.author.AuthorUtils.GuideTableEdit.isFirstRow(editable);}"
            handler="guidelib.author.AuthorUtils.GuideTableEdit.moveRowUp"
            text="Move Up"/>
        <movedown
            jcr:primaryType="nt:unstructured"
            condition="function(editable){return !guidelib.author.AuthorUtils.GuideTableEdit.isLastRow(editable);}"
            handler="guidelib.author.AuthorUtils.GuideTableEdit.moveRowDown"
            text="Move Down"/>
    </cq:actionConfigs>
</jcr:root>
