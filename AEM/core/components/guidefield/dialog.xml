<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:mixinTypes="[granite:InternalArea]"
    jcr:primaryType="cq:Dialog"
    title="dialog"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <title
            jcr:primaryType="nt:unstructured"
            title="Title and text"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <name
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    fieldLabel="Element Name"
                    name="./name"
                    regex="/^[a-zA-Z0-9_\\-]+$/"
                    regexText="Element name should only contain characters, numbers, _ or -"
                    xtype="textfield"/>
                <title
                    jcr:primaryType="nt:unstructured"
                    path="/libs/foundation/components/form/defaults/items/title.infinity.json"
                    xtype="cqinclude"/>
                <colspan
                    jcr:primaryType="cq:Widget"
                    disabled="false"
                    fieldDescription="Enter number of columns the field should span. Supported only for Responsive layout."
                    fieldLabel="Colspan"
                    grow="false"
                    hideLabel="false"
                    name="./colspan"
                    readOnly="false"
                    selected="1"
                    type="combobox"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <v1
                            jcr:primaryType="nt:unstructured"
                            text="1"
                            value="1"/>
                        <v2
                            jcr:primaryType="nt:unstructured"
                            text="2"
                            value="2"/>
                        <v3
                            jcr:primaryType="nt:unstructured"
                            text="3"
                            value="3"/>
                        <v4
                            jcr:primaryType="nt:unstructured"
                            text="4"
                            value="4"/>
                        <v5
                            jcr:primaryType="nt:unstructured"
                            text="5"
                            value="5"/>
                        <v6
                            jcr:primaryType="nt:unstructured"
                            text="6"
                            value="6"/>
                    </options>
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        loadcontent="function(){guidelib.author.GuideExtJSDialogUtils.handleColspan.apply(this, arguments);}"
                        selectionchanged="function(){guidelib.author.GuideExtJSDialogUtils.setNewColspan.apply(this, arguments);}"/>
                </colspan>
                <hideTitle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Hide title"
                    name="./hideTitle"
                    type="checkbox"
                    xtype="selection"/>
                <required
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Mandatory"
                    name="./mandatory"
                    type="checkbox"
                    xtype="selection"/>
                <mandatoryMessage
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Message for mandatory field"
                    name="./mandatoryMessage"
                    xtype="textarea"/>
                <placeholder
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Placeholder Text"
                    name="./placeholderText"
                    xtype="textfield"/>
                <guideGlobalLazyField
                    jcr:primaryType="cq:Widget"
                    fieldDescription="This would allow the value of the field to be used  globally"
                    fieldLabel="Use Value Globally"
                    name="./isGlobal"
                    type="checkbox"
                    xtype="selection"/>
                <bindref
                    jcr:primaryType="cq:Widget"
                    fieldDescription="A valid bindRef can have  alphanumeric characters, parenthesis, dot, hyphen, at the rate, forward slash, asterisk, dollar and underscore "
                    fieldLabel="Bind reference"
                    name="./bindRef"
                    regex="/^\\S*$/"
                    xtype="textfield">
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        loadcontent="function() { guidelib.author.GuideExtJSDialogUtils.bindRefField.disableBindRefField.apply(this,arguments) }"/>
                </bindref>
                <validateExpMessage
                    jcr:primaryType="cq:Widget"
                    fieldDescription="This message will be displayed when the field value breaks the validation rule"
                    fieldLabel="Script validation message"
                    name="./validateExpMessage"
                    xtype="textfield"/>
            </items>
        </title>
        <script
            jcr:primaryType="nt:unstructured"
            labelWidth="{Long}125"
            title="Script"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <ruleEditortext0
                    jcr:primaryType="cq:Widget"
                    html="&lt;label>Use the new &lt;b class='open-rule-editor' style='color:blue;cursor:pointer;text-decoration:underline;' >Rule Editor&lt;/b> to define scripts on fields.&lt;/label>"
                    style="text-align:center; padding-top:15px;"
                    xtype="static"/>
                <ruleEditortext1
                    jcr:primaryType="cq:Widget"
                    cls="x-form-item-description"
                    style="text-align:center; padding-bottom:20px;"
                    text="You can also access it directly from the field's contextual menu."
                    xtype="static"/>
            </items>
        </script>
        <patterns
            jcr:primaryType="nt:unstructured"
            title="Patterns"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <displayPictureClause
                    jcr:primaryType="cq:Widget"
                    fieldDescription="On selecting a type, the Pattern field is filled automatically. Regular Expression are permitted."
                    fieldLabel="Pattern"
                    name="./displayPictureClause"
                    width="92%"
                    xtype="textfield">
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        change="function() { guidelib.author.GuideExtJSDialogUtils.loadDisplayPatternType.apply(this, arguments); }"
                        loadcontent="function() { guidelib.author.GuideExtJSDialogUtils.loadDisplayPatternType.apply(this, arguments); }"/>
                </displayPictureClause>
                <sameAsDisplayPattern
                    jcr:primaryType="cq:Widget"
                    autoWidth="true"
                    fieldLabel="Same as display pattern"
                    name="./displayIsSameAsValidate"
                    type="checkbox"
                    xtype="selection">
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        selectionchanged="function() { guidelib.author.GuideExtJSDialogUtils.makeDisplayAndValidatePatternSame.apply(this, arguments); }"/>
                </sameAsDisplayPattern>
                <validatePictureClause
                    jcr:primaryType="cq:Widget"
                    fieldDescription="On selecting a type, the Pattern field is filled automatically. Regular Expression are permitted."
                    fieldLabel="Pattern"
                    name="./validatePictureClause"
                    width="92%"
                    xtype="textfield">
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        change="function() { guidelib.author.GuideExtJSDialogUtils.loadValidatePatternType.apply(this, [arguments[0], false]); }"
                        loadcontent="function() { guidelib.author.GuideExtJSDialogUtils.loadValidatePatternType.apply(this, [arguments[0], true]); }"/>
                </validatePictureClause>
                <validatePictureClauseMessage
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Error message"
                    name="./validatePictureClauseMessage"
                    width="92%"
                    xtype="textfield"/>
            </items>
        </patterns>
        <styling
            jcr:primaryType="nt:unstructured"
            autoWidth="{Boolean}true"
            title="Styling"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <width
                    jcr:primaryType="cq:Widget"
                    fieldDescription="In percentage"
                    fieldLabel="Width"
                    name="./width"
                    xtype="numberfield"/>
                <height
                    jcr:primaryType="cq:Widget"
                    fieldDescription="In pixels"
                    fieldLabel="Height"
                    name="./height"
                    xtype="numberfield"/>
                <css
                    jcr:primaryType="cq:Widget"
                    fieldLabel="CSS class"
                    name="./css"
                    xtype="textfield"/>
                <fieldLayout
                    jcr:primaryType="cq:Widget"
                    autoHeight="{Boolean}true"
                    fieldDescription="Layout of this field"
                    fieldLabel="Configure Field Layout"
                    name="./fieldLayout"
                    options="/libs/fd/af/components/info.json?type=layout&amp;layoutType=fd/af/layouts/field&amp;isAfField=true"
                    type="select"
                    xtype="selection">
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        loadcontent="function() { guidelib.author.GuideExtJSDialogUtils.sanitizeFieldPath.apply(this, arguments); }"/>
                </fieldLayout>
                <inlineStyleLabel
                    jcr:primaryType="nt:unstructured"
                    style="font-size:small;"
                    text="Inline CSS Properties "
                    xtype="label"/>
                <inlineStyleProperties
                    jcr:primaryType="cq:Widget"
                    name="guideStyle"
                    xtype="tabpanel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <fieldStyles
                            jcr:primaryType="nt:unstructured"
                            autoHeight="{Boolean}true"
                            forceLayout="{Boolean}true"
                            hideMode="offsets"
                            labelWidth="{Long}160"
                            title="Field"
                            xtype="panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <inlinestyles
                                    jcr:primaryType="cq:Widget"
                                    hidden="{Boolean}true"
                                    hideMode="offsets"
                                    name="./inlineStyles"
                                    xtype="multifield">
                                    <fieldConfig
                                        jcr:primaryType="nt:unstructured"
                                        column="1"
                                        xtype="textfield"/>
                                </inlinestyles>
                                <fieldProperties
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Property"
                                    hideLabel="{Boolean}true"
                                    name="Field"
                                    xtype="multifield">
                                    <fieldConfig
                                        jcr:primaryType="nt:unstructured"
                                        column="2"
                                        cssAttributes="[border-style,border-width,border-color,border-radius,                                                             padding,margin,font-family]"
                                        xtype="guidestylemultifield"/>
                                </fieldProperties>
                            </items>
                        </fieldStyles>
                        <widgetStyles
                            jcr:primaryType="nt:unstructured"
                            autoHeight="{Boolean}true"
                            forceLayout="{Boolean}true"
                            hideMode="offsets"
                            title="Widget"
                            xtype="panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <widgetProperties
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Property"
                                    hideLabel="{Boolean}true"
                                    name="Widget"
                                    xtype="multifield">
                                    <fieldConfig
                                        jcr:primaryType="nt:unstructured"
                                        xtype="guidestylemultifield"/>
                                </widgetProperties>
                            </items>
                        </widgetStyles>
                        <captionStyles
                            jcr:primaryType="nt:unstructured"
                            autoHeight="{Boolean}true"
                            forceLayout="{Boolean}true"
                            hideMode="offsets"
                            title="Caption"
                            xtype="panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <captionProperties
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Property"
                                    hideLabel="{Boolean}true"
                                    name="Caption"
                                    xtype="multifield">
                                    <fieldConfig
                                        jcr:primaryType="nt:unstructured"
                                        xtype="guidestylemultifield"/>
                                </captionProperties>
                            </items>
                        </captionStyles>
                        <helpStyles
                            jcr:primaryType="nt:unstructured"
                            autoHeight="{Boolean}true"
                            autoScroll="{Boolean}true"
                            forceLayout="{Boolean}true"
                            title="Help"
                            xtype="panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <questionMarkStyles
                                    jcr:primaryType="nt:unstructured"
                                    forceLayout="{Boolean}true"
                                    hideMode="offsets"
                                    title="Question Mark"
                                    xtype="panel">
                                    <items jcr:primaryType="cq:WidgetCollection">
                                        <questionMarkProperties
                                            jcr:primaryType="cq:Widget"
                                            fieldLabel="Property"
                                            hideLabel="{Boolean}true"
                                            name="QuestionMark"
                                            xtype="multifield">
                                            <fieldConfig
                                                jcr:primaryType="nt:unstructured"
                                                cssAttributes="[border-style, border-width, border-color, padding,                                                      margin, color, font-family, font-size, font-weight, line-height,                                                      background-color, content]"
                                                xtype="guidestylemultifield"/>
                                        </questionMarkProperties>
                                    </items>
                                </questionMarkStyles>
                                <shortDesctiptionStyles
                                    jcr:primaryType="nt:unstructured"
                                    forceLayout="{Boolean}true"
                                    hideMode="offsets"
                                    title="Short Description"
                                    xtype="panel">
                                    <items jcr:primaryType="cq:WidgetCollection">
                                        <shortDesctiptionProperties
                                            jcr:primaryType="cq:Widget"
                                            fieldLabel="Property"
                                            hideLabel="{Boolean}true"
                                            name="ShortDescription"
                                            xtype="multifield">
                                            <fieldConfig
                                                jcr:primaryType="nt:unstructured"
                                                xtype="guidestylemultifield"/>
                                        </shortDesctiptionProperties>
                                    </items>
                                </shortDesctiptionStyles>
                                <longDesctiptionStyles
                                    jcr:primaryType="nt:unstructured"
                                    forceLayout="{Boolean}true"
                                    hideMode="offsets"
                                    title="Long Description"
                                    xtype="panel">
                                    <items jcr:primaryType="cq:WidgetCollection">
                                        <longDesctiptionProperties
                                            jcr:primaryType="cq:Widget"
                                            fieldLabel="Property"
                                            hideLabel="{Boolean}true"
                                            name="LongDescription"
                                            xtype="multifield">
                                            <fieldConfig
                                                jcr:primaryType="nt:unstructured"
                                                xtype="guidestylemultifield"/>
                                        </longDesctiptionProperties>
                                    </items>
                                </longDesctiptionStyles>
                            </items>
                        </helpStyles>
                    </items>
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        afterrender="function(){guidelib.author.AuthorUtils.setDialogConfigForStyleEditor.apply(this,arguments);}"/>
                </inlineStyleProperties>
                <inlineStyleDescription
                    jcr:primaryType="nt:unstructured"
                    style="color: #8F8F8F;font-size:11px;margin-top:5px; margin-bottom:8px; padding-right:5%;font-weight: normal;"
                    text="Specify a CSS property (for example, margin) in the first column and its value (for example, 10px) in the second column."
                    xtype="label"/>
                <preview
                    jcr:primaryType="cq:Widget"
                    boxMaxWidth="{Long}75"
                    handler="function(){guidelib.author.GuideExtJSDialogUtils.handlePreviewOfInlineStyles.apply(this);}"
                    style="float: right;margin-right: 30px;"
                    text="Preview"
                    xtype="button"/>
            </items>
        </styling>
        <help
            jcr:primaryType="nt:unstructured"
            title="Help content"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <shortDescLabel
                    jcr:primaryType="cq:Widget"
                    bold="{Boolean}true"
                    height="20"
                    name="./shortDescLabel"
                    text="Short description"
                    xtype="static"/>
                <shortDescription
                    jcr:primaryType="cq:Widget"
                    height="100"
                    hideLabel="{Boolean}true"
                    name="./shortDescription"
                    xtype="richtext"/>
                <shortDescVisible
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Always show short description"
                    name="./shortVisible"
                    type="checkbox"
                    xtype="selection"/>
                <longDescLabel
                    jcr:primaryType="cq:Widget"
                    bold="{Boolean}true"
                    height="20"
                    name="./longDescLabel"
                    text="Long description"
                    xtype="static"/>
                <longDescription
                    jcr:primaryType="cq:Widget"
                    height="190"
                    hideLabel="{Boolean}true"
                    name="./longDescription"
                    xtype="richtext">
                    <rtePlugins jcr:primaryType="nt:unstructured">
                        <misctools
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                    </rtePlugins>
                </longDescription>
            </items>
        </help>
        <accessiblity
            jcr:primaryType="nt:unstructured"
            title="Accessibility"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <assistPriority
                    jcr:primaryType="cq:Widget"
                    defaultValue="custom"
                    fieldLabel="Screen reader precedence"
                    name="./assistPriority"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <customText
                            jcr:primaryType="nt:unstructured"
                            text="Custom Text"
                            value="custom"/>
                        <shortDescription
                            jcr:primaryType="nt:unstructured"
                            text="Short Description"
                            value="shortDescription"/>
                        <caption
                            jcr:primaryType="nt:unstructured"
                            text="Title"
                            value="label"/>
                        <name
                            jcr:primaryType="nt:unstructured"
                            text="Name"
                            value="name"/>
                        <none
                            jcr:primaryType="nt:unstructured"
                            text="None"
                            value="none"/>
                    </options>
                </assistPriority>
                <customTextLabel
                    jcr:primaryType="cq:Widget"
                    bold="{Boolean}true"
                    height="20"
                    name="./customTextLabel"
                    text="Custom Text"
                    xtype="static"/>
                <customText
                    jcr:primaryType="cq:Widget"
                    height="150"
                    hideLabel="{Boolean}true"
                    name="./custom"
                    xtype="textarea"/>
            </items>
        </accessiblity>
        <dorSettings
            jcr:primaryType="nt:unstructured"
            title="DOR Settings"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <excludeFromDor
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Checking this will skip this component to be part of Document Of Record"
                    fieldLabel="Exclude From Document Of Record"
                    name="./dorExclusion"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </dorSettings>
    </items>
    <listeners
        jcr:primaryType="nt:unstructured"
        activate="function() {guidelib.author.editConfigListeners.launchExpressionEditor.apply(this);}"
        beforehide="function(){guidelib.author.GuideExtJSDialogUtils.beforeHideHandler.apply(this);}"/>
</jcr:root>
