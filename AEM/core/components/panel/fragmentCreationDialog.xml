<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}500"
    title="Fragment Creation Dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <fragmentProperties
                jcr:primaryType="nt:unstructured"
                style="height: 200px;"
                title="Fragment Properties"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <name
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Name"
                        name="name"
                        regex="/^[a-zA-Z0-9_-]+$/"
                        regexText="Element name should only contain characters, numbers or _-"
                        xtype="textfield"/>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="title"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="description"
                        xtype="textarea"/>
                    <tags
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Tags"
                        name="tags"
                        xtype="textfield"/>
                    <targetPath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Path to store the fragment"
                        fieldLabel="Target Path"
                        name="targetPath"
                        rootPath="/content/dam/formsanddocuments"
                        xtype="pathfield"/>
                    <formmodel
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Form Model"
                        name="formModel"
                        readOnly="{Boolean}true"
                        selected="1"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <none
                                jcr:primaryType="nt:unstructured"
                                text="none"
                                value="none"/>
                            <formtemplates
                                jcr:primaryType="nt:unstructured"
                                text="formtemplates"
                                value="formtemplates"/>
                            <xmlschema
                                jcr:primaryType="nt:unstructured"
                                text="xmlschema"
                                value="xmlschema"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            selectionchanged="function(){guidelib.author.GuideExtJSDialogUtils.handleFormModelChange.apply(this);}"/>
                    </formmodel>
                    <fragmentModelRoot
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Fragment Model Root"
                        hidden="{Boolean}true"
                        name="fragmentModelRoot"
                        type="select"
                        xtype="selection"/>
                    <xsdRef
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Xsd Ref"
                        hidden="{Boolean}true"
                        name="xsdRef"
                        xtype="textfield"/>
                    <xdpRef
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Xdp Ref"
                        hidden="{Boolean}true"
                        name="xdpRef"
                        xtype="textfield"/>
                </items>
            </fragmentProperties>
        </items>
    </items>
</jcr:root>
