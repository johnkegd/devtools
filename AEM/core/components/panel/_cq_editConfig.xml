<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:actions="[edit,-,delete,-,copymove,insert]"
    cq:dialogMode="floating"
    cq:disableTargeting="{Boolean}true"
    cq:isContainer="{Boolean}true"
    cq:layout="editbar"
    jcr:primaryType="cq:EditConfig">
    <cq:actionConfigs jcr:primaryType="nt:unstructured">
        <editexpression
            jcr:primaryType="nt:unstructured"
            condition="function(editable){ return guidelib.author.AuthorUtils.showRuleEditor(); }"
            handler="guidelib.author.editConfigListeners.showExpressionEditor"
            order="after CONFIGURE"
            text="Edit Rules"/>
        <separator3
            jcr:primaryType="nt:unstructured"
            xtype="tbseparator"/>
        <som
            jcr:primaryType="nt:unstructured"
            handler="guidelib.author.editConfigListeners.getSOM"
            text="View SOM Expression"/>
        <saveInPanel
            jcr:primaryType="nt:unstructured"
            handler="guidelib.author.editConfigListeners.openSaveInPanelDialog"
            text="Group Objects In Panel"/>
    </cq:actionConfigs>
    <cq:listeners
        jcr:primaryType="cq:EditListenersConfig"
        afterchilddelete="guidelib.author.editConfigListeners.GUIDE_AFTER_CHILD_DELETE"
        afterchildedit="guidelib.author.editConfigListeners.GUIDE_AFTER_CHILD_EDIT"
        afterchildinsert="guidelib.author.editConfigListeners.GUIDE_AFTER_CHILD_INSERT"
        afterchildmove="guidelib.author.editConfigListeners.GUIDE_AFTER_CHILD_MOVE"
        afterdelete="guidelib.author.editConfigListeners.REFRESH_GUIDE"
        afteredit="guidelib.author.editConfigListeners.REFRESH_GUIDE"
        afterinsert="guidelib.author.editConfigListeners.GUIDE_AFTER_INSERT"
        aftermove="guidelib.author.editConfigListeners.REFRESH_GUIDE"/>
    <cq:inplaceEditing
        jcr:primaryType="cq:InplaceEditingConfig"
        active="{Boolean}true"
        configPath="inplaceEditingTextConfig"
        editorType="affEditor">
        <inplaceEditingTextConfig
            jcr:primaryType="nt:unstructured"
            hideLabel="{Boolean}true"
            tooltipLabel="Edit Fragment"/>
    </cq:inplaceEditing>
    <cq:dropTargets jcr:primaryType="nt:unstructured">
        <HalfQuickBind
            jcr:primaryType="cq:DropTargetConfig"
            accept="[dataModelObject]"
            groups="[quickBindFDM]"
            propertyName="./fileReference"/>
    </cq:dropTargets>
</jcr:root>
