<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Save as Fragment"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[af.authoring.dialog,formsmanager.gui.components.common.fragmentCreation]">
    <content
        granite:class="guideIndependentDialog"
        jcr:primaryType="nt:unstructured"
        jcr:title=""
        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
        <items jcr:primaryType="nt:unstructured">
            <name
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Name"
                name="name"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    node-name-validation=""/>
            </name>
            <title
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Title"
                name="title">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    af.listeners.onload="guidelib.touchlib.editLayer.dialogEventHandlers.createFragmentOnLoad()"/>
            </title>
            <description
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Description"
                name="description"/>
            <tags
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Tags"
                name="tags"/>
            <targetPath
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                fieldLabel="Target Path"
                filter="folder"
                name="targetPath"
                rootPath="/content/dam/formsanddocuments"/>
            <formmodel
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                fieldLabel="Form Model"
                name="formModel"
                required="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <none
                        jcr:primaryType="nt:unstructured"
                        text="none"
                        value="none"/>
                    <formtemplates
                        jcr:primaryType="nt:unstructured"
                        text="formtemplates"
                        value="formtemplates"/>
                    <xmlschema
                        jcr:primaryType="nt:unstructured"
                        text="xmlschema"
                        value="xmlschema"/>
                    <jsonschema
                        jcr:primaryType="nt:unstructured"
                        text="jsonschema"
                        value="jsonschema"/>
                    <formdatamodel
                        jcr:primaryType="nt:unstructured"
                        text="formdatamodel"
                        value="formdatamodel"/>
                </items>
            </formmodel>
            <fragmentModelRoot
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                fieldLabel="Fragment Model Root"
                name="fragmentModelRoot">
                <items jcr:primaryType="nt:unstructured"/>
            </fragmentModelRoot>
            <xsdRef
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Xsd Ref"
                name="xsdRef"/>
            <xdpRef
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Xdp Ref"
                name="xdpRef"/>
            <schemaRef
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Schema Ref"
                name="schemaRef"/>
        </items>
    </content>
</jcr:root>
