<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Edit checkBox"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[af.authoring.dialog]">
    <content
        jcr:primaryType="nt:unstructured"
        jcr:title="Email Action"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <from
                jcr:mixinTypes="[granite:InternalArea]"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="From"
                name="./from"
                required="true"/>
            <mailTo
                jcr:mixinTypes="[granite:InternalArea]"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="fd/af/authoring/components/granite/form/formsmultifield"
                autoWidth="{Boolean}true"
                fieldLabel="To"
                typeHint="String[]">
                <field
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    allowBlank="{Boolean}false"
                    name="./mailto">
                    <granite:data
                        jcr:primaryType="nt:unstructured"
                        blank-value-validation=""/>
                </field>
            </mailTo>
            <cc
                jcr:mixinTypes="[granite:InternalArea]"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="fd/af/authoring/components/granite/form/formsmultifield"
                autoWidth="{Boolean}true"
                fieldLabel="CC"
                typeHint="String[]">
                <field
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    allowBlank="{Boolean}false"
                    name="./cc"/>
            </cc>
            <bcc
                jcr:mixinTypes="[granite:InternalArea]"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="fd/af/authoring/components/granite/form/formsmultifield"
                autoWidth="{Boolean}true"
                fieldLabel="BCC"
                typeHint="String[]">
                <field
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    allowBlank="{Boolean}false"
                    name="./bcc"/>
            </bcc>
            <subject
                jcr:mixinTypes="[granite:InternalArea]"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Subject"
                name="./subject"/>
            <template
                jcr:mixinTypes="[granite:InternalArea]"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                fieldLabel="Email Template"
                name="./template"/>
            <templatePath
                jcr:mixinTypes="[granite:InternalArea]"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                fieldLabel="Email Template Path"
                filter="nosystem"
                name="./templatePath"
                rootPath="/"/>
            <attach
                jcr:mixinTypes="[granite:InternalArea]"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                fieldLabel="Include attachments"
                name="./includeAttachments"
                text="Include attachments"
                value="true"/>
        </items>
    </content>
</jcr:root>
