<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title=""
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <accordion
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/accordion">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <chartType
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="css"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Chart Type"
                                name="./chartType">
                                <items jcr:primaryType="nt:unstructured">
                                    <pie
                                        jcr:primaryType="nt:unstructured"
                                        text="Pie"
                                        value="pie"/>
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        text="Column"
                                        value="column"/>
                                    <donut
                                        jcr:primaryType="nt:unstructured"
                                        text="Donut"
                                        value="donut"/>
                                    <bar
                                        jcr:primaryType="nt:unstructured"
                                        text="Bar"
                                        value="bar"/>
                                    <line
                                        jcr:primaryType="nt:unstructured"
                                        text="Line"
                                        value="line"/>
                                    <linepoint
                                        jcr:primaryType="nt:unstructured"
                                        text="Line and Point"
                                        value="linepoint"/>
                                    <point
                                        jcr:primaryType="nt:unstructured"
                                        text="Point"
                                        value="point"/>
                                    <area
                                        jcr:primaryType="nt:unstructured"
                                        text="Area"
                                        value="area"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.chartTypeOnChange();"
                                    af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.chartTypeOnChange();"/>
                            </chartType>
                            <dataSourceType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                metaType="hidden"
                                name="./dataSourceType">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.chartDataSourceTypeOnChange();"/>
                            </dataSourceType>
                            <repeatableItem
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="css"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Repeating Row or Panel Name"
                                name="./repeatableItem"/>
                            <axisX
                                jcr:primaryType="nt:unstructured"
                                jcr:title="X Axis"
                                sling:orderBefore="css"
                                sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                title="X Axis">
                                <items jcr:primaryType="nt:unstructured">
                                    <xAxisTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title"
                                        name="./xAxisTitle"/>
                                    <xAxis
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Name of the field to be plotted on X Axis."
                                        fieldLabel="Field"
                                        name="./xExp"
                                        required="{Boolean}true"/>
                                    <reducerXFunction
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Selected function computes value of the above field."
                                        fieldLabel="Function"
                                        name="./reducerXFunction">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                            guideDataModel="basic"
                                            type="chartReducer"/>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.functionOnChange('xAxisFunction');"/>
                                    </reducerXFunction>
                                </items>
                            </axisX>
                            <axisY
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Y Axis"
                                sling:orderBefore="css"
                                sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                title="Y Axis">
                                <items jcr:primaryType="nt:unstructured">
                                    <yAxisTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title"
                                        name="./yAxisTitle"/>
                                    <yAxis
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Name of the field to be plotted on Y Axis."
                                        fieldLabel="Field"
                                        name="./yExp"
                                        required="{Boolean}true"/>
                                    <reducerYFunction
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Selected function computes value of the above field."
                                        fieldLabel="Function"
                                        name="./reducerYFunction">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                            guideDataModel="basic"
                                            type="chartReducer"/>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.functionOnChange('yAxisFunction');"/>
                                    </reducerYFunction>
                                </items>
                            </axisY>
                            <innerRadius
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="css"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldDescription="In pixels."
                                fieldLabel="Inner Radius"
                                name="./innerRadius"
                                renderHidden="{Boolean}true">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    touchUIInnerRadius="touchUIInnerRadius"/>
                            </innerRadius>
                            <colorPickersContainer
                                granite:class="guide-chartStyleClass"
                                granite:id="style-propertysheet"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <lineColor
                                        granite:class="style-propertysheet-colorpicker"
                                        jcr:primaryType="nt:unstructured"
                                        sling:orderBefore="css"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        fieldDescription="Default color is #000000 (Black)."
                                        fieldLabel="Line Color"
                                        name="./lineColor"
                                        renderHidden="{Boolean}true"
                                        showSwatches="{Boolean}false"
                                        wrapperClass="propertySheetCssProperty">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.loadChartDrawColorPicker();"
                                            touchUILineColor="touchUILineColor"/>
                                    </lineColor>
                                    <pointColor
                                        granite:class="style-propertysheet-colorpicker"
                                        jcr:primaryType="nt:unstructured"
                                        sling:orderBefore="css"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        fieldDescription="Default color is #000000 (Black)."
                                        fieldLabel="Point Color"
                                        name="./pointColor"
                                        renderHidden="{Boolean}true"
                                        showSwatches="{Boolean}false"
                                        wrapperClass="propertySheetCssProperty">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            touchUIPointColor="touchUIPointColor"/>
                                    </pointColor>
                                    <areaColor
                                        granite:class="style-propertysheet-colorpicker"
                                        jcr:primaryType="nt:unstructured"
                                        sling:orderBefore="css"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        fieldDescription="Default color is #000000 (Black)."
                                        fieldLabel="Area Color"
                                        name="./areaColor"
                                        renderHidden="{Boolean}true"
                                        showSwatches="{Boolean}false"
                                        wrapperClass="propertySheetCssProperty">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            touchUIAreaColor="touchUIAreaColor"/>
                                    </areaColor>
                                </items>
                            </colorPickersContainer>
                            <colspan
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}false"/>
                            <hideTitle
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <required
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <mandatoryMessage
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <placeholder
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <excludeFromDor
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <guideGlobalLazyField
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <bindref
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <dorBindref
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <validateExpMessage
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <fieldLayout
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <enabled
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <enabled-typehint
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <legendNoteLabel
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"
                                sling:resourceType="granite/ui/components/coral/foundation/text"
                                id="legendsNoteLabel"
                                name="legendsNoteLabel"
                                style="font-size:small;"
                                text="Legend option is not available for Line / Point / Line and Point / Area chart types."
                                xtype="label">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    afLegendNoteLabel="afLegendNoteLabel"/>
                            </legendNoteLabel>
                            <legends
                                jcr:primaryType="nt:unstructured"
                                jcr:title=""
                                sling:orderBefore="css"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                name="legendsFieldSet"
                                title="">
                                <items jcr:primaryType="nt:unstructured">
                                    <showLegends
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        name="./showLegends"
                                        text="Show legends"
                                        value="true">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.legendCheckBoxChange();"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.legendCheckBoxChange();"/>
                                    </showLegends>
                                    <legendPosition
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Legend Position"
                                        name="./legendPosition"
                                        renderHidden="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <bottom
                                                jcr:primaryType="nt:unstructured"
                                                text="Bottom"
                                                value="bottom"/>
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="Left"
                                                value="left"/>
                                            <right
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="Right"
                                                value="right"/>
                                            <top
                                                jcr:primaryType="nt:unstructured"
                                                text="Top"
                                                value="top"/>
                                        </items>
                                    </legendPosition>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    afLegendFieldsSet="afLegendFieldSet"
                                    supportedChartTypes="pie,donut,column,bar"/>
                            </legends>
                            <tooltipNoteLabel
                                granite:class="afToolTipClass"
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"
                                sling:orderBefore="css"
                                sling:resourceType="granite/ui/components/coral/foundation/text"
                                id="tooltipNoteLabel"
                                name="tooltipNoteLabel"
                                renderHidden="{Boolean}true"
                                style="font-size:small;"
                                text="Tooltip option is not available for Line / Area chart types."
                                xtype="label">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    afTooltipNoteLabel="afTooltipNoteLabel"/>
                            </tooltipNoteLabel>
                            <tooltipHtml
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="css"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                ctCls="guideChartTooltipText"
                                fieldLabel="Tooltip"
                                name="./tooltipHtml"
                                useFixedInlineToolbar="{Boolean}true"
                                value="&lt;p>\\${x}(\\${y})&lt;/p>"
                                xtype="richtext">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <links jcr:primaryType="nt:unstructured">
                                        <linkDialogConfig
                                            jcr:primaryType="nt:unstructured"
                                            height="{Long}316">
                                            <linkAttributes jcr:primaryType="cq:WidgetCollection"/>
                                        </linkDialogConfig>
                                    </links>
                                    <format
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <lists
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <justify
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <keys
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <paraformat
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <fullscreen
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,fullscreen#start]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                    ref="justify"/>
                                                <lists
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                    ref="lists"/>
                                            </popovers>
                                        </inline>
                                        <fullscreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,-,links#modifylink,links#unlink,links#anchor,tracklinks#modifylinktracking,-,justify#justifyleft,justify#justifycenter,justify#justifyright,-,image#imageProps,-,lists#unordered,lists#ordered,lists#outdent,lists#indent,-,misctools#sourceedit,fullscreen#finish]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                                <paraformat
                                                    jcr:primaryType="nt:unstructured"
                                                    items="paraformat:getFormats:paraformat-pulldown"
                                                    ref="paraformat"/>
                                            </popovers>
                                        </fullscreen>
                                    </cui>
                                </uiSettings>
                            </tooltipHtml>
                            <css
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="CSS Class"
                                name="./css"/>
                        </items>
                        <parentConfig
                            jcr:primaryType="nt:unstructured"
                            active="{Boolean}true"/>
                    </basic>
                    <help
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <accessibility
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <patterns
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                </items>
            </accordion>
        </items>
    </content>
</jcr:root>
