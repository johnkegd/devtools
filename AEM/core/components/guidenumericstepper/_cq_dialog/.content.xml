<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title=""
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <accordion
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/accordion">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <dataType
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                af.listeners.change="function(){guidelib.touchlib.numericDataTypeOnChange();}"
                                fieldLabel="Datatype"
                                name="./dataType">
                                <items jcr:primaryType="nt:unstructured">
                                    <empty
                                        jcr:primaryType="nt:unstructured"
                                        text=""
                                        value=""/>
                                    <decimal
                                        jcr:primaryType="nt:unstructured"
                                        text="Decimal"
                                        value="decimal"/>
                                    <integer
                                        jcr:primaryType="nt:unstructured"
                                        text="Integer"
                                        value="integer"/>
                                    <float
                                        jcr:primaryType="nt:unstructured"
                                        text="Float"
                                        value="float"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.numericDataTypeOnChange();"
                                    af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.numericDataTypeOnChange();"/>
                            </dataType>
                            <leadDigits
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                defaultValue=""
                                fieldLabel="Lead digits"
                                name="./leadDigits"/>
                            <fracDigits
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                defaultValue=""
                                fieldLabel="Frac digits"
                                name="./fracDigits"/>
                            <stepSize
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="value"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldDescription="Specifies the amount by which the value increases or decreases."
                                fieldLabel="Step Value"
                                name="./stepSize"
                                value="1"/>
                        </items>
                    </basic>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help Content"
                        sling:resourceType="granite/ui/components/coral/foundation/container"/>
                    <accessibility jcr:primaryType="nt:unstructured"/>
                    <patterns
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displayPatternGroup
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Display pattern"
                                sling:hideResource="{Boolean}true"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                title="Display pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <displayPatternType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type"
                                        name="./displayPatternType">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changeDatePickerPattern('displayPattern');"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.loadDatePickerPattern('displayPattern','guideNumericBox');"/>
                                    </displayPatternType>
                                    <displayPictureClause
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Pattern will be autofilled on selecting the type."
                                        fieldLabel="Pattern"
                                        name="./displayPictureClause"/>
                                </items>
                            </displayPatternGroup>
                            <validationPatternGroup
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Validation pattern"
                                sling:hideResource="{Boolean}true"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                title="Validation pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <sameAsDisplayPattern
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        autoWidth="true"
                                        fieldLabel="Same as display pattern"
                                        name="./displayIsSameAsValidate"
                                        text="Same as display pattern"
                                        value="true">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.sameAsDisplayValPatternChange();"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.sameAsDisplayValPatternChange();"/>
                                    </sameAsDisplayPattern>
                                    <validationPatternType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type"
                                        name="./validationPatternType">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changeDatePickerPattern('validationPattern');"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.loadDatePickerPattern('validationPattern','guideNumericBox');"/>
                                    </validationPatternType>
                                    <validatePictureClause
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="On selecting a type, the Pattern field is filled automatically. Regular Expression are permitted."
                                        fieldLabel="Pattern"
                                        name="./validatePictureClause"/>
                                    <validatePictureClauseMessage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Error message"
                                        name="./validatePictureClauseMessage"/>
                                </items>
                            </validationPatternGroup>
                        </items>
                    </patterns>
                </items>
            </accordion>
        </items>
    </content>
</jcr:root>
