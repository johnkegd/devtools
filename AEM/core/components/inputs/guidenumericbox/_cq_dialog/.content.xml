<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title=""
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <accordion
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/accordion">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <html5Type
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Enable to use HTML5 number input type in the field. By default, it uses text input type."
                                fieldLabel="Use HTML5 Number Input Type"
                                name="./html5Type"
                                text="Use HTML5 Number Input Type"
                                value="number"/>
                            <dataType
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                af.listeners.change="function(){guidelib.touchlib.numericDataTypeOnChange();}"
                                fieldLabel="Data Type"
                                name="./dataType">
                                <items jcr:primaryType="nt:unstructured">
                                    <empty
                                        jcr:primaryType="nt:unstructured"
                                        text=""
                                        value=""/>
                                    <decimal
                                        jcr:primaryType="nt:unstructured"
                                        text="Decimal"
                                        value="decimal"/>
                                    <integer
                                        jcr:primaryType="nt:unstructured"
                                        text="Integer"
                                        value="integer"/>
                                    <float
                                        jcr:primaryType="nt:unstructured"
                                        text="Float"
                                        value="float"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.numericDataTypeOnChange();"
                                    af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.numericDataTypeOnChange();"/>
                            </dataType>
                            <value
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                defaultValue=""
                                fieldLabel="Default Value"
                                name="./_value"/>
                            <leadDigits
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                defaultValue=""
                                fieldLabel="Lead digits"
                                name="./leadDigits"/>
                            <fracDigits
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                defaultValue=""
                                fieldLabel="Frac digits"
                                name="./fracDigits"/>
                            <minimum
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                defaultValue=""
                                fieldLabel="Minimum Value"
                                name="./minimum"/>
                            <exclusiveMinimum
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldLabel="Exclusive Minimum"
                                name="./exclusiveMinimum"
                                text="Exclude minimum value"
                                value="true"/>
                            <maximum
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                defaultValue=""
                                fieldLabel="Maximum Value"
                                name="./maximum"/>
                            <exclusiveMaximum
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldLabel="Exclusive Maximum"
                                name="./exclusiveMaximum"
                                text="Exclude maximum value"
                                value="true"/>
                        </items>
                    </basic>
                    <patterns
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Patterns"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displayPatternGroup
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Display Pattern"
                                sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                title="Display Pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <displayPatternType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type"
                                        name="./displayPatternType">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                            guideDataModel="basic"
                                            guideNodeClass="guideNumericBox"
                                            type="formatters"/>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternList('displayPattern', true);"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternList('displayPattern', true);"/>
                                    </displayPatternType>
                                    <displayPictureClause
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Pattern"
                                        name="./displayPictureClause">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternText('displayPattern');"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternText('displayPattern');"/>
                                    </displayPictureClause>
                                </items>
                            </displayPatternGroup>
                            <validationPatternGroup
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Validation Pattern"
                                sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                title="Validation Pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <sameAsDisplayPattern
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        autoWidth="true"
                                        fieldLabel="Same as display pattern"
                                        name="./displayIsSameAsValidate"
                                        text="Same as display pattern"
                                        value="true">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.sameAsDisplayValPatternChange();"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.sameAsDisplayValPatternChange();"/>
                                    </sameAsDisplayPattern>
                                    <validationPatternType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type"
                                        name="./validationPatternType">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternList('validationPattern', true);"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternList('validationPattern', true);"/>
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                            guideDataModel="basic"
                                            guideNodeClass="guideNumericBox"
                                            type="formatters"/>
                                    </validationPatternType>
                                    <validatePictureClause
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Regular expression is permitted."
                                        fieldLabel="Pattern"
                                        name="./validatePictureClause">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternText('validationPattern');"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternText('validationPattern');"/>
                                    </validatePictureClause>
                                    <validatePictureClauseMessage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldLabel="Error message"
                                        name="./validatePictureClauseMessage"/>
                                </items>
                            </validationPatternGroup>
                        </items>
                    </patterns>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help Content"
                        sling:resourceType="granite/ui/components/coral/foundation/container"/>
                </items>
            </accordion>
        </items>
    </content>
</jcr:root>
