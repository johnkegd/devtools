<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title=""
    sling:resourceType="cq/gui/components/authoring/dialog"
    helppath="en/cq/current/wcm/&#xa;default_components.html#Carousel">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <accordion
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/accordion">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <placeholder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Placeholder text will not work for the native Date widget."
                                fieldLabel="Placeholder Text"
                                name="./placeholderText"/>
                            <value
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="YYYY-MM-DD"
                                fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                fieldLabel="Default Value"
                                name="./_value"/>
                            <defaultToCurrentDate
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                checked="{Boolean}false"
                                name="./defaultToCurrentDate"
                                text="Set current date as default value."
                                value="true">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.defaultToCurrentDateOnChange();"
                                    af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.defaultToCurrentDateOnChange();"/>
                            </defaultToCurrentDate>
                            <minimum
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="YYYY-MM-DD"
                                fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                fieldLabel="Minimum Value"
                                name="./minimum"/>
                            <exclusiveMinimum
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldLabel="Exclusive Minimum"
                                name="./exclusiveMinimum"
                                text="Exclude minimum value"
                                value="true"/>
                            <maximum
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="YYYY-MM-DD"
                                fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                fieldLabel="Maximum Value"
                                name="./maximum"/>
                            <exclusiveMaximum
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="guideGlobalLazyField"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldLabel="Exclusive Maximum"
                                name="./exclusiveMaximum"
                                text="Exclude maximum value"
                                value="true"/>
                        </items>
                    </basic>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help Content"
                        sling:resourceType="granite/ui/components/coral/foundation/container"/>
                    <patterns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displayPatternGroup
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Display Pattern"
                                sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                title="Display Pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <displayPatternType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type"
                                        name="./displayPatternType">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                            guideDataModel="basic"
                                            guideNodeClass="guideDatePicker"
                                            type="formatters"/>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternList('displayPattern', true);"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternList('displayPattern');"/>
                                    </displayPatternType>
                                    <displayPictureClause
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Pattern"
                                        name="./displayPictureClause">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternText('displayPattern');"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternText('displayPattern');"/>
                                    </displayPictureClause>
                                    <note
                                        jcr:primaryType="nt:unstructured"
                                        name="./displayNote"
                                        text="*If a display pattern is provided, then an Adaptive Form uses a custom date widget else a native HTML5 date widget is used."/>
                                </items>
                            </displayPatternGroup>
                            <validationPatternGroup
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Validation Pattern"
                                sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                title="Validation Pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <sameAsDisplayPattern
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        autoWidth="true"
                                        fieldLabel="Same as display pattern"
                                        name="./displayIsSameAsValidate"
                                        text="Same as display pattern"
                                        value="true">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.sameAsDisplayValPatternChange();"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.sameAsDisplayValPatternChange();"/>
                                    </sameAsDisplayPattern>
                                    <validationPatternType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type"
                                        name="./validationPatternType">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternList('validationPattern', true);"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternList('validationPattern');"/>
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                            guideDataModel="basic"
                                            guideNodeClass="guideDatePicker"
                                            type="formatters"/>
                                    </validationPatternType>
                                    <validatePictureClause
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Regular expression is permitted."
                                        fieldLabel="Pattern"
                                        name="./validatePictureClause">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternText('validationPattern');"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternText('validationPattern');"/>
                                    </validatePictureClause>
                                    <validatePictureClauseMessage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldLabel="Error Message"
                                        name="./validatePictureClauseMessage"/>
                                </items>
                            </validationPatternGroup>
                            <editPatternGroup
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Edit Pattern"
                                sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                title="Edit Pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <editSameAsDisplayPattern
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        autoWidth="true"
                                        fieldLabel="Same as display pattern"
                                        name="./isEditSameAsDisplayPattern"
                                        text="Same as display pattern"
                                        value="true">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.sameAsDisplayEditPatternChange();"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.sameAsDisplayEditPatternChange();"/>
                                    </editSameAsDisplayPattern>
                                    <editPatternType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type"
                                        name="./editPatternType">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternList('editPattern', true);"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternList('editPattern');"/>
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                            guideDataModel="basic"
                                            guideNodeClass="guideDatePicker"
                                            type="formatters"/>
                                    </editPatternType>
                                    <editPictureClause
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Pattern"
                                        name="./editPictureClause">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.changePatternText('editPattern');"
                                            af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.changePatternText('editPattern');"/>
                                    </editPictureClause>
                                </items>
                            </editPatternGroup>
                        </items>
                    </patterns>
                </items>
            </accordion>
        </items>
    </content>
</jcr:root>
