<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="guideButton">
    <items jcr:primaryType="nt:unstructured">
        <field
            jcr:primaryType="nt:unstructured"
            sling:hideResource="true"/>
        <button
            jcr:primaryType="nt:unstructured"
            jcr:title="All Buttons"
            cssSelector="button:not(.af-icon-button),input[type='button']"
            id="af_button"
            jsonPostHandler="window.guidelib.touchlib.style.utils.buttonPostHandler('.guidebutton', options)"
            longTitle="Button"
            propertySheet="/mnt/overlay/fd/af/components/stylePropertySheet/common">
            <items jcr:primaryType="nt:unstructured">
                <buttonText
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Button Text"
                    cssSelector="button .iconButton-label"
                    id="af_buttontext"
                    longTitle="Button Text"
                    propertySheet="/mnt/overlay/fd/af/components/stylePropertySheet/common">
                    <states jcr:primaryType="nt:unstructured">
                        <focus
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Focus"
                            cssSelector="button:not(.af-icon-button):focus .iconButton-label"/>
                        <active
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Down"
                            cssSelector="button:not(.af-icon-button):active .iconButton-label"/>
                        <disabled
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Disabled"
                            cssSelector="\[data-disabled='true'] button:not(.af-icon-button) .iconButton-label"/>
                        <hover
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Hover"
                            cssSelector="button:not(.af-icon-button):hover .iconButton-label"/>
                    </states>
                </buttonText>
                <buttonIcon
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Button Icon"
                    cssSelector="button .iconButton-icon"
                    id="af_buttonicon"
                    longTitle="Button Icon"
                    propertySheet="/mnt/overlay/fd/af/components/stylePropertySheet/common">
                    <states jcr:primaryType="nt:unstructured">
                        <focus
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Focus"
                            cssSelector="button:not(.af-icon-button):focus .iconButton-icon"/>
                        <active
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Down"
                            cssSelector="button:not(.af-icon-button):active .iconButton-icon"/>
                        <disabled
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Disabled"
                            cssSelector="\[data-disabled='true'] button:not(.af-icon-button) .iconButton-icon"/>
                        <hover
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Hover"
                            cssSelector="button:not(.af-icon-button):hover .iconButton-icon"/>
                    </states>
                </buttonIcon>
            </items>
            <states jcr:primaryType="nt:unstructured">
                <focus
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Focus"
                    cssSelector="button:not(.af-icon-button):focus"/>
                <active
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Down"
                    cssSelector="button:not(.af-icon-button):active"/>
                <disabled
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Disabled"
                    cssSelector="\[data-disabled='true'] button:not(.af-icon-button)"/>
                <hover
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Hover"
                    cssSelector="button:not(.af-icon-button):hover"/>
            </states>
        </button>
    </items>
</jcr:root>
