<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title=""
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <accordion
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/accordion">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <placeholder
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <options
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                fieldDescription="Select an image and its save value."
                                fieldLabel="Items"
                                wrapperClass="imageUploadWithTextWrapperClass">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="fd/af/authoring/components/granite/form/imageuploadwithtext"
                                    assetButtonText="Browse Assets"
                                    async="{Boolean}true"
                                    autoStart="{Boolean}false"
                                    emptyText="Save Value*"
                                    enableRename="{Boolean}true"
                                    fileName="./file"
                                    fileNameParameter="./fileName"
                                    fileReferenceParameter="./fileReference"
                                    mimeTypes="[image]"
                                    multiple="{Boolean}false"
                                    name="options"
                                    predicate="nosystem"
                                    rootPath="/content/dam"
                                    sizeLimit="{Long}100000000"
                                    text="Upload"
                                    textFieldName=""
                                    textFieldRequired="{Boolean}true"
                                    title="Upload Image"
                                    uploadUrl="${requestPathInfo.suffix}"
                                    useHTML5="{Boolean}true"/>
                            </options>
                            <guideNodeClass
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Should image button behave as checkbox or radiobutton."
                                fieldLabel="Type of Appearance"
                                name="./guideNodeClass">
                                <items jcr:primaryType="nt:unstructured">
                                    <guideCheckBox
                                        jcr:primaryType="nt:unstructured"
                                        text="Multi Select"
                                        value="guideCheckBox"/>
                                    <guideRadioButton
                                        jcr:primaryType="nt:unstructured"
                                        text="Single Select"
                                        value="guideRadioButton"/>
                                </items>
                            </guideNodeClass>
                            <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Default Value"
                                name="./_value"/>
                            <alignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                fieldLabel="Item Alignment"
                                name="./alignment"
                                text="Item Alignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <horizontal
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                        checked="true"
                                        text="Horizontal"
                                        value="guideFieldHorizontalAlignment"/>
                                    <vertical
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                        text="Vertical"
                                        value="guideFieldVerticalAlignment"/>
                                </items>
                            </alignment>
                        </items>
                    </basic>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help Content"
                        sling:resourceType="granite/ui/components/coral/foundation/container"/>
                    <patterns
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <accessibility
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Accessibility"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <assistPriority
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <assistPriorityCustom
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="customText"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                emptyText=""
                                fieldLabel="Screen reader precedence"
                                name="./assistPriority"
                                value="custom">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.showHideCustomText()"
                                    af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.showHideCustomText()"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <empty
                                        jcr:primaryType="nt:unstructured"
                                        text=""
                                        value=""/>
                                    <customText
                                        jcr:primaryType="nt:unstructured"
                                        text="Custom text"
                                        value="custom"/>
                                    <caption
                                        jcr:primaryType="nt:unstructured"
                                        text="Title"
                                        value="caption"/>
                                </items>
                            </assistPriorityCustom>
                            <customText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="fd/af/authoring/components/granite/form/formsmultifield"
                                fieldLabel="Custom text">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    wrapper-class="custom-text-wrapper"/>
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    name="./custom"/>
                            </customText>
                        </items>
                    </accessibility>
                </items>
            </accordion>
        </items>
    </content>
</jcr:root>
